  "phishingTemplates": {
    "paypal": {
      "patterns": ["paypal", "account verification", "security alert", "limited access", "unusual activity"],
      "commonSubjects": ["Account Security Alert", "Verify Your PayPal Account", "Urgent: Account Access Limited", "PayPal Account Suspension"],
      "riskScore": 85,
      "explanation": "Phishing emails often impersonate PayPal to steal login credentials."
    },
    "bank": {
      "patterns": ["bank", "statement", "transaction", "account balance", "security check", "fraud alert"],
      "commonSubjects": ["Account Statement", "Transaction Alert", "Security Verification", "Account Update Required"],
      "riskScore": 65,
      "explanation": "Bank phishing typically requests account verification or claims suspicious activity."
    },
    "tech": {
      "patterns": ["apple", "microsoft", "google", "amazon", "account", "password", "login", "icloud", "onedrive"],
      "commonSubjects": ["Account Security", "Password Reset", "Unusual Activity", "Device Verification"],
      "riskScore": 75,
      "explanation": "Tech company phishing often claims account compromise or requires password reset."
    },
    "crypto": {
      "patterns": ["crypto", "cryptocurrency", "bitcoin", "ethereum", "wallet", "withdrawal", "mining", "investment"],
      "commonSubjects": ["Crypto Withdrawal", "Wallet Security", "Investment Opportunity", "Account Verification"],
      "riskScore": 90,
      "explanation": "Cryptocurrency scams promise high returns or claim wallet compromise."
    },
    "delivery": {
      "patterns": ["delivery", "package", "tracking", "courier", "shipment", "address", "confirmation"],
      "commonSubjects": ["Package Delivery", "Shipment Update", "Delivery Confirmation", "Address Verification"],
      "riskScore": 50,
      "explanation": "Delivery scams often request payment or address verification for fake packages."
    },
    "government": {
      "patterns": ["irs", "tax", "refund", "social security", "government", "official", "claim", "benefits"],
      "commonSubjects": ["Tax Refund", "Social Security", "Government Benefits", "Official Notice"],
      "riskScore": 80,
      "explanation": "Government impersonation scams often promise refunds or benefits."
    }
  },

  "educationalContent": {
    "tips": [
      "Always verify the sender's email address carefully",
      "Hover over links before clicking to see the real URL",
      "Never share passwords or financial information via email",
      "Use two-factor authentication on all accounts",
      "Keep your software and antivirus updated",
      "Be suspicious of unsolicited requests for personal information",
      "Check for HTTPS and valid SSL certificates on websites"
